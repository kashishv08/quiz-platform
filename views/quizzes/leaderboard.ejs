<% layout('layouts/boilerplate') %>

<div class="container leaderboard-wrapper mt-4">
  <!-- Leaderboard Header -->
  <div
    class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3"
  >
    <a href="/quizzes" class="btn back-btn">‚Üê Back to Quizzes</a>
    <h1 class="leader-heading text-center text-md-start">
      Leaderboard: <%= quiz.title %>
    </h1>
    <div></div>
  </div>

  <!-- Leaderboard Table -->
  <div class="card shadow-sm">
    <div class="card-body p-3 p-md-4">
      <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th scope="col">Rank</th>
              <th scope="col">User</th>
              <th scope="col">Score</th>
            </tr>
          </thead>
          <tbody>
            <% sortedScores.forEach((score, index) => { %>
            <tr>
              <td><strong><%= index + 1 %></strong></td>
              <td><%= score.user.username %></td>
              <td><%= score.score %> / <%= quiz.questions.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
