<% layout('layouts/boilerplate') %>

<style>
  .page-container {
    max-width: 900px;
    margin-top: 0.1rem;
    margin-bottom: 1rem;
    padding-left: 1rem;
  }


  .top-row {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
  }

  .back-button {
    background-color: black;
    color: white;
    padding: 10px 18px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin-right: 10rem;
  }

  .top-row h1 {
    margin: 0;
    font-size: 28px;
    color: #333;
  }

  .edit-container {
    margin-left: 20rem;
    margin-right: 5rem;
  }

  .submit-btn {
    background-color: #c4121e !important;
    color: white !important;
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
  }
</style>

<div class="page-container">
  <div class="top-row">
    <a class="back-button" href="/examiners/<%= quiz._id %>">‚Üê Back to Quiz</a>
    <h1>Edit Quiz</h1>
  </div>

  <div class="edit-container">
    <form
      class="needs-validation"
      action="/examiners/<%= quiz._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="quiz[title]"
          class="form-control"
          id="title"
          value="<%= quiz.title %>"
          required
        />
        <div class="invalid-feedback">Please enter a quiz title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="quiz[description]"
          class="form-control"
          id="description"
          rows="5"
          required
        >
<%= quiz.description %></textarea
        >
        <div class="invalid-feedback">Please enter a description.</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Current Image:</label><br />
        <% if (quiz.image && quiz.image.url) { %>
        <img src="<%= quiz.image.url %>" alt="Quiz Image" width="200" />
        <% } else { %>
        <p>No image uploaded yet.</p>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Change Image:</label>
        <input
          type="file"
          name="image"
          class="form-control"
          id="image"
          accept="image/*"
        />
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <input
          type="text"
          name="quiz[category]"
          class="form-control"
          id="category"
          value="<%= quiz.category %>"
          required
        />
        <div class="invalid-feedback">Please enter a category.</div>
      </div>

      <button type="submit" class="btn submit-btn">Edit</button>
    </form>
  </div>
</div>
